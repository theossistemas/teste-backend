@model Livraria.Models.BookModel.BookViewModel
<div class="flex-row-fluid m-0">
    <!--begin::Section-->
    <div class="row container m-0">
        <div class="col-lg-12 m-0">
            <!--begin::Engage Widget 14-->
            <div class="card card-custom card-stretch gutter-b">
                <div class="card-body p-15 pb-20">
                    <div class="row mb-17">
                        <div class="col-xxl-5 mb-11 mb-xxl-0">
                            <!--begin::Image-->
                                <div class="p-0 px-10 py-15 d-flex align-items-center justify-content-center">
                                    <img src="/assets/media/books/1.png" class="mw-100 w-130px" style="transform: scale(1.6);">
                                </div>
                            <!--end::Image-->
                        </div>
                        <div class="col-xxl-7 pl-xxl-11">
                            <h2 class="font-weight-bolder text-dark mb-7" style="font-size: 32px;">@Model.SingleBook.Title</h2>
                            <div class="font-size-h2 mb-7 text-dark-50">
                                Preço
                                <span class="text-info font-weight-boldest ml-2">R$ @Model.SingleBook.Price</span>
                            </div>
                            <div class="line-height-xl">@Model.SingleBook.BookInfo</div>
                        </div>
                    </div>
                    <div class="row mb-6">
                        <!--begin::Info-->
                        <div class="col-6 col-md-4">
                            <div class="mb-8 d-flex flex-column">
                                <span class="text-dark font-weight-bold mb-4">Autor</span>
                                <span class="text-muted font-weight-bolder font-size-lg">@Model.SingleBook.Author.Name</span>
                            </div>
                        </div>
                        <div class="col-6 col-md-4">
                            <div class="mb-8 d-flex flex-column">
                                <span class="text-dark font-weight-bold mb-4">Editora</span>
                                <span class="text-muted font-weight-bolder font-size-lg">@Model.SingleBook.Publisher.Name</span>
                            </div>
                        </div>
                        <div class="col-6 col-md-4">
                            <div class="mb-8 d-flex flex-column">
                                <span class="text-dark font-weight-bold mb-4">Idioma</span>
                                <span class="text-muted font-weight-bolder font-size-lg">@Model.SingleBook.Language</span>
                            </div>
                        </div>
                        <div class="col-6 col-md-4">
                            <div class="mb-8 d-flex flex-column">
                                <span class="text-dark font-weight-bold mb-4">Ano</span>
                                <span class="text-muted font-weight-bolder font-size-lg">@Model.SingleBook.Year</span>
                            </div>
                        </div>
                        <div class="col-6 col-md-4">
                            <div class="mb-8 d-flex flex-column">
                                <span class="text-dark font-weight-bold mb-4">Edição</span>
                                <span class="text-muted font-weight-bolder font-size-lg">@Model.SingleBook.Edition</span>
                            </div>
                        </div>
                        <div class="col-6 col-md-4">
                            <div class="mb-8 d-flex flex-column">
                                <span class="text-dark font-weight-bold mb-4">ISBN</span>
                                <span class="text-muted font-weight-bolder font-size-lg">@Model.SingleBook.ISBN</span>
                            </div>
                        </div>
                        <div class="col-6 col-md-4">
                            <div class="mb-8 d-flex flex-column">
                                <span class="text-dark font-weight-bold mb-4">Incluído</span>
                                <span class="text-muted font-weight-bolder font-size-lg">@Model.SingleBook.CreatedAt.ToString("dd/MM/yyyy")</span>
                            </div>
                        </div>
                        <div class="col-6 col-md-4">
                            <div class="mb-8 d-flex flex-column">
                                <span class="text-dark font-weight-bold mb-4">N. de Páginas</span>
                                <span class="text-muted font-weight-bolder font-size-lg">@Model.SingleBook.Pages</span>
                            </div>
                        </div>
                        <div class="col-6 col-md-4">
                            <div class="mb-8 d-flex flex-column">
                                <span class="text-dark font-weight-bold mb-4">Estoque</span>
                                <span class="text-muted font-weight-bolder font-size-lg">@Model.SingleBook.Stock</span>
                            </div>
                        </div>
                        <!--end::Info-->
                    </div>
                    <!--begin::Buttons-->
                    <div class="d-flex">
                        <a href="/api/Books/EditBook?bookId=@Model.SingleBook.Id" type="button" class="btn btn-primary font-weight-bolder mr-6 px-6 font-size-sm" control-id="ControlID-6">
